<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="labelText">
        <item name="android:textSize">@dimen/text_size_label</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="descriptionText">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="dateText">
        <item name="android:textSize">@dimen/text_size_date</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="moneyText">
        <item name="android:textSize">@dimen/text_size_label</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

</resources>
